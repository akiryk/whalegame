class Sounds {	private var mySound:Sound;	private var myName:String;		public function Sounds(soundName:String, looping:Boolean){		myName = soundName;		addSound();		if (looping) mySound.start(0, Infinity);	}		private function addSound():Void {		 // create a new sound object		mySound = new Sound();				// attach the sound		mySound.attachSound(myName);				// start the sound playing		mySound.start();	}		public function killSound():Void {		delete mySound;	}		public function stopSound():Void {		mySound.stop();	}		public function getVolume():Number {		return mySound.getVolume();	}		public function setVolume(v:Number):Void {		mySound.setVolume(v);	}	}