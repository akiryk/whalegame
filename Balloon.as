class Balloon {			private var balloon_mc:MovieClip;	private var string_mc:MovieClip;	private var string:Line;	private var target:MovieClip;		/*// *******************************	CONSTRUCTOR	/// *******************************/	public function Balloon(target:MovieClip, x:Number, y:Number, scale:Number, d:Number) {		balloon_mc = target.attachMovie("balloon", "balloon" + d, d);		balloon_mc._x = x;		balloon_mc._y = y;		balloon_mc._xscale = balloon_mc._yscale = scale;		var v:Vector = new Vector(x, y);		balloon_mc._rotation =  v.getAngle() + 90; // add 90 because flash coords aren't same as game coords		delete v; // delete vector because it's only used this one time.				this.target = target;				d += 1; // make depth much higher so that string is not conflicting with balloons		string_mc = target.createEmptyMovieClip("s"+d,d);		string = new Line(0,0, balloon_mc._x, balloon_mc._y, string_mc);	}		public function removeBalloon():Void {		var pop = new Sounds("pop");		balloon_mc.gotoAndPlay(2); // balloon_mc removes itself after it plays out		string.destroy();	}}